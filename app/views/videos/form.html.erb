<h1><%= @video.id ? 'Edit Video' : 'Create Video' %></h1>
<form class="ui form">
  <div class="field">
<%= form_for @video do |f| %>
<form class="ui form">
<div class="field">
<%= f.label :title %>
<%= f.text_field :title, required: true, autofocus: true %>
</div>

<div class="field">
<%= f.label :duration %>
<%= f.text_field :duration %>
</div>

<div class="field">
<%= f.label :genre %>
<%= f.text_field :genre %>
</div>

<div class="field">
<%= f.label :description %>
<%= f.text_area :description %>
</div>

<div class="field">
<%= f.label :trailer %>
<%= f.text_field :trailer, required: true %>

<%= f.submit %>
<%= link_to 'Back To Videos', videos_path %>
</div>
<% end %>

